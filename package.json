{
  "name": "@azury/bundler",
  "version": "0.0.0",
  "description": "A better bundler for Node.js",
  "main": "bin/index.js",
  "scripts": {
    "dev": "node watch.js",
    "build": "node build.js && terser bin/index.js --compress --mangle --output bin/index.js",
    "publish:patch": "npm run build && npm version patch && npm publish",
    "publish:minor": "npm run build && npm version minor && npm publish",
    "publish:major": "npm run build && npm version major && npm publish"
  },
  "bin": {
    "build": "./bin/index.js"
  },
  "funding": {
    "type": "individual",
    "url": "https://ko-fi.com/azury"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azurystudios/bundler.git"
  },
  "keywords": [
    "bundle",
    "minimalistic",
    "minify",
    "easy-to-use",
    "cli"
  ],
  "author": "Azury <hello@azury.dev> (https://azury.dev)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/azurystudios/bundler/issues"
  },
  "homepage": "https://github.com/azurystudios/bundler#readme",
  "devDependencies": {
    "@types/archiver": "^5.1.1",
    "@types/glob": "^7.2.0",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/node": "^16.11.12",
    "@types/svgo": "^2.6.0",
    "@types/yargs": "^17.0.7",
    "archiver": "^5.3.0",
    "boxen": "^6.2.1",
    "chalk": "^5.0.0",
    "esbuild": "^0.14.2",
    "esbuild-css-modules-plugin": "^2.0.9",
    "glob": "^7.2.0",
    "html-minifier-terser": "^7.0.0-alpha.0",
    "node-fetch": "^3.1.0",
    "svgo": "^2.8.0",
    "terser": "^5.10.0",
    "yargs": "^17.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
