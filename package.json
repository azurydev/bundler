{
  "name": "@azury/bundler",
  "version": "1.2.6",
  "description": "A bundler to simplify work at Azury",
  "main": "build/index.js",
  "scripts": {
    "dev": "node watch.js",
    "build": "node build.js && terser build/index.js --compress --mangle --output build/index.js",
    "publish:patch": "npm run build && npm version patch && npm publish",
    "publish:minor": "npm run build && npm version minor && npm publish",
    "publish:major": "npm run build && npm version major && npm publish"
  },
  "bin": {
    "build": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azurydev/bundler.git"
  },
  "keywords": [
    "bundle",
    "minimalistic",
    "minify",
    "easy-to-use",
    "cli"
  ],
  "author": "Azury <hello@azury.dev> (https://azury.dev)",
  "license": "Apache-2.0",
  "dependencies": {
    "css-tree": "^2.0.4",
    "esbuild": "^0.14.6",
    "html-minifier-terser": "^7.0.0-alpha.0",
    "terser": "^5.10.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/node": "^17.0.1",
    "@types/svgo": "^2.6.0",
    "@types/yargs": "^17.0.7",
    "archiver": "^5.3.0",
    "chalk": "^5.0.0",
    "esbuild-css-modules-plugin": "^2.0.9",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "svgo": "^2.8.0",
    "typescript": "^4.5.2",
    "yargs": "^17.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
